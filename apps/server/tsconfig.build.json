{
  "extends": "./tsconfig.dev.json",
  "compilerOptions": {
    "rootDir": "src",
    "noEmit": false,
    "paths": {
      "@paper-trading/server-shared": [
        "../../packages/server/src",
        "../../packages/server/dist"
      ],
      "@paper-trading/db": [
        "../../packages/db/src",
        "../../packages/db/dist"
      ]
    }
  },
  "references": [
    { "path": "../../packages/db" },
    { "path": "../../packages/server" }
  ],
  "include": [
    "src"
  ],
  "exclude": [
    "dist",
    "test",
    "**/*.test.ts",
    "vitest.config.ts"
  ]
}
